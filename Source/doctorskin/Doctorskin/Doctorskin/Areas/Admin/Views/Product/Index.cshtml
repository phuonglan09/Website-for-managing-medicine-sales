
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Danh sách sản phẩm</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Danh sách sản phẩm</li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">Danh sách sản phẩm</h4>
                <div class="flex-shrink-0">
                    <button type="button" id="btnCreate" onclick="window.location.href='/Admin/Product/CreateOrEdit'" class="btn btn-warning btn-sm"><i class="bx bx-plus"></i> Thêm</button>
                </div>
            </div>
            <div class="card-body">
                <div class="live-preview pb-3">
                    <div class="row">
                        <div class="col-md-3">
                            <label>Tìm kiếm</label>
                            <input type="text" class="form-control" id="txtSearch" placeholder="Tên sản phẩm,..." />
                        </div>
                        <div class="col-md-1">
                            <button type="button" class="btn btn-primary" style="margin-top:28px;" id="btnSeach"><i class="bx bx-search"></i></button>
                        </div>
                    </div>
                </div>
                <table class="table table-centered align-middle" id="tblProducts">
                </table>
            </div>
        </div>
    </div> <!-- end col -->
</div>

