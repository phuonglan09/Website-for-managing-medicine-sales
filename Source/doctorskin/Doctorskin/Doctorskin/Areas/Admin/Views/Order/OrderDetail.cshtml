@using Doctors.Base.Models
@model Order
@{
    ViewData["Title"] = "OrderDetail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    int orderId = 0;
    var orderCode = string.Empty;
    if (Model != null)
    {
        orderId = Model.Id;
        orderCode = Model.OrderCode;
    }
}
<input type="hidden" value="@orderId" id="ipOrderId" />
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Chi tiết đơn hàng <span class="text-danger">@orderCode</span></h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Chi tiết đơn hàng</li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">Chi tiết đơn hàng <span class="text-danger">@orderCode</span></h4>
            </div>
            <div class="card-body">
                <table class="table table-centered align-middle" id="tblOrderDetail">
                </table>
            </div>
        </div>
    </div> <!-- end col -->
</div>

