@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var lstRoleGroup = (List<Doctors.Base.Models.RoleGroup>)ViewBag.ListRoleGroup;
}
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Danh sách nhân viên</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Danh sách nhân viên</li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">Danh sách nhân viên</h4>
                <div class="flex-shrink-0">
                    <button type="button" id="btnCreate" class="btn btn-warning btn-sm"><i class="bx bx-plus"></i> Thêm</button>
                </div>
            </div>
            <div class="card-body">
                <div class="live-preview pb-3">
                    <div class="row">
                        <div class="col-md-3">
                            <label>Tìm kiếm</label>
                            <input type="text" class="form-control" id="txtSearch" placeholder="Tên, tài khoản,..." />
                        </div>
                        <div class="col-md-1">
                            <button type="button" class="btn btn-primary" style="margin-top:28px;" id="btnSeach"><i class="bx bx-search"></i></button>
                        </div>
                    </div>
                </div>
                <table class="table table-centered align-middle" id="tblAdmin">
                </table>
            </div>
        </div>
    </div> <!-- end col -->
</div>
<div id="modalsAddEdit" class="modal fade" tabindex="-1" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 overflow-hidden">
            <div class="modal-header p-3">
                <h4 class="card-title mb-0" id="titleModal"></h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" id="frmAdmin">
                    <input hidden name="Id" id="ipHiddenId">
                    <div class="row">
                        <div class="mb-3 col-md-12">
                            <label class="form-label"> Họ và tên</label>
                            <input type="text" class="form-control" name="FullName" id="ipFullName">
                        </div>
                        <div class="mb-3 col-md-12">
                            <label class="form-label">Số điện thoại</label>
                            <input type="text" class="form-control" name="Phone" id="ipPhone">
                        </div>
                          <div class="mb-3 col-md-12">
                            <label class="form-label">Địa chỉ</label>
                            <input type="text" class="form-control" name="Address" id="ipAddress">
                        </div>
                        <div class="mb-3 col-md-12">
                            <label class="form-label"> Tài khoản</label>
                            <input type="text" class="form-control" name="Username" id="ipUsername">
                        </div>
                        <div class="mb-3 col-md-12">
                            <label class="form-label"> Mật khẩu</label>
                            <input type="password" class="form-control" name="Password" id="ipPassword">
                        </div>
                        <div>
                            <label class="form-label"> Quyền</label>
                            <select class="form-control" id="sltRoleGroup" name="RoleGroupId">
                                <option value="0">--Chọn quyền--</option>
                                @if (lstRoleGroup != null && lstRoleGroup.Count > 0)
                                {
                                    @foreach (var item in lstRoleGroup)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button id="btnSubmit" type="button" class="btn btn-primary">Lưu</button>
                        <a href="javascript:void(0);" class="btn btn-link fw-medium" data-bs-dismiss="modal">Đóng</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


