
@{
    ViewData["Title"] = "Xác nhận mã OTP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image " data-bs-bg="/assets/img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">Tài khoản</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a href="/"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Trang chủ</a></li>
                            <li>Xác nhận OTP</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="ltn__login-area pb-110">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title-area text-center">
                    <h1 class="section-title">Xác nhận <br>OTP của bạn</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="account-login-inner">
                    <input type="hidden" id="ipUserId" value="@ViewBag.UserId">
                    <input type="text" name="OTP" id="ipCodeOTP" placeholder="Mã OTP*">
                    <div class="btn-wrapper">
                        <button class="theme-btn-1 btn reverse-color btn-block" id="btnConfirmOTPForgot" type="button">Xác nhận</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

