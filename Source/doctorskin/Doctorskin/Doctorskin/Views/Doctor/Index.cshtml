@using Doctors.Base.Models
@model List<Doctor>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image " data-bs-bg="/assets/img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">Bác sĩ</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a href="/"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Trang chủ</a></li>
                            <li>Bác sĩ</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@if (Model != null && Model.Count > 0)
{
    <div class="ltn__service-area section-bg-1 pt-60 pb-70">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title-area ltn__section-title-2--- text-center">
                        <h1 class="section-title">Đội ngũ bác sĩ</h1>
                    </div>
                </div>
            </div>
            <div class="row  justify-content-center">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-sm-6 col-12">
                        <div class="ltn__feature-item ltn__feature-item-6 text-center bg-white  box-shadow-1">
                            <div class="ltn__feature-icon">
                                <img src="/Uploads/Doctor/@item.AvaDoc" alt="#">
                            </div>
                            <div class="ltn__feature-info">
                                <h3><a href="javascript:void(0)">@item.Namedoc</a></h3>
                                <p>@Html.Raw(item.Infordoc)</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="ltn__pagination-area text-center">
                        <div class="ltn__pagination">
                            <ul>
                                @if (ViewBag.CurrentPage > 1)
                                {
                                    <li><a href="@Url.Action("Index","Doctor", new { page = ViewBag.CurrentPage - 1 })"><i class="fas fa-angle-double-left"></i></a></li>
                                }
                                @for (var i = 1; i <= ViewBag.TotalPages; i++)
                                {
                                    <li class="@(i == ViewBag.CurrentPage ? "active" : "")"><a href="@Url.Action("Index","Doctor", new { page = i })">@i</a></li>
                                }
                                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                                {
                                    <li><a href="@Url.Action("Index", "Doctor", new { page = ViewBag.CurrentPage + 1 })"><i class="fas fa-angle-double-right"></i></a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <p>Đang cập nhật....</p>
}

