
@{
    ViewData["Title"] = "Đặt lịch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image " data-bs-bg="/assets/img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">Đặt lịch khám</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a href="/"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Trang chủ</a></li>
                            <li>Đăng ký tư vấn và khám bệnh</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="ltn__login-area pb-110">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title-area text-center">
                    <h1 class="section-title">Đăng ký tư vấn <br> Khám bệnh</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="account-login-inner">
                    <form id="frmBookings">
                        <input type="text" name="Name" id="ipName" placeholder="Họ và tên*">
                        <input type="text" name="Email" id="ipEmail" placeholder="Email*">
                        <input type="text" name="Phone" id="ipPhone" placeholder="Số điện thoại*">
                        <textarea type="text" name="Require" id="ipRequire" placeholder="Yêu cầu của bạn"></textarea>
                        <input type="datetime-local" class="form-control" name="Timebooking" id="ipTimebooking" />
                        <div class="btn-wrapper">
                            <button class="theme-btn-1 btn reverse-color btn-block" id="btnBooking" type="button">Lưu</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

