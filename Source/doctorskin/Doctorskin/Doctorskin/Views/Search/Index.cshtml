@using Doctorskin.Models
@using System.Globalization
@model SearchModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image " data-bs-bg="/assets/img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">Sản phẩm</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a href="/"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Trang chủ</a></li>
                            <li>Tìm kiếm</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@if (!string.IsNullOrEmpty(ViewBag.Search))
{
    <div class="container">
        <div class="row">
            <p class="text-left">
                Kết quả tìm kiếm: <span class="text-danger">@ViewBag.Search</span>
            </p>
        </div>
    </div>
}
@if (Model != null)
{
    if (Model.ListProduct != null && Model.ListProduct.Count > 0)
    {
        <div class="ltn__product-area ltn__product-gutter mb-120">
            <div class="container">
                <div class="row">
                    <div class="tab-content">
                        <div class="tab-pane fade active show" id="liton_product_grid">
                            <div class="ltn__product-tab-content-inner ltn__product-grid-view">
                                <div class="row">
                                    @foreach (var item in Model.ListProduct)
                                    {
                                        <!-- ltn__product-item -->
                                        <div class="col-xl-3 col-lg-4 col-sm-6 col-6">
                                            <div class="ltn__product-item ltn__product-item-3 text-center">
                                                <div class="product-img">
                                                    <a href="/Product/Detail?Id=@item.Id"><img src="/Uploads/Product/@item.Img" alt="#"></a>
                                                    <div class="product-hover-action">
                                                        <ul>
                                                            <li>
                                                                <a href="javascript:void(0)" title="Thêm giỏ hàng" onclick="base.addCart(@item.Id, 1)">
                                                                    <i class="fas fa-shopping-cart"></i>
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                                <div class="product-info">
                                                    <h2 class="product-title"><a href="/Product/Detail?Id=@item.Id">@item.Namep</a></h2>
                                                    <div class="product-price">
                                                        <span>@item.Newprice.ToString("C", CultureInfo.GetCultureInfo("vi-VN"))</span>
                                                        <del>@item.Oldprice.ToString("C", CultureInfo.GetCultureInfo("vi-VN"))</del>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (Model.ListDoctor != null && Model.ListDoctor.Count > 0)
    {
        <div class="ltn__service-area section-bg-1 pt-60 pb-70">
            <div class="container">
                <div class="row">
                    @foreach (var item in Model.ListDoctor)
                    {
                        <div class="col-lg-4 col-sm-6 col-12">
                            <div class="ltn__feature-item ltn__feature-item-6 text-center bg-white  box-shadow-1">
                                <div class="ltn__feature-icon">
                                    <img src="/Uploads/Doctor/@item.AvaDoc" alt="#">
                                </div>
                                <div class="ltn__feature-info">
                                    <h3><a href="javascript:void(0)">@item.Namedoc</a></h3>
                                    <p>@Html.Raw(item.Infordoc)</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <p class="text-center">Không tìm thấy kết quả</p>
    }
}
else
{
    <div class="container">
        <p class="text-center">Không tìm thấy kết quả</p>
    </div>
}


