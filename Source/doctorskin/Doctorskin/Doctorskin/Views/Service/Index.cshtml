@using Doctorskin.Models
@using System.Globalization
@model ServiceModel
@{
    ViewData["Title"] = "Dịch vụ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image " data-bs-bg="/assets/img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">Dịch vụ </h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a href="/"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Trang chủ</a></li>
                            <li>Dịch vụ</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB AREA END -->
<!-- ABOUT US AREA START -->
@if (Model != null && Model.Service != null)
{
    <div class="ltn__about-us-area pb-115">
        <div class="container">
            <div class="row">
                <div class="col-lg-5 align-self-center">
                    <div class="about-us-img-wrap ltn__img-shape-left  about-img-left">
                        <img src="/Uploads/Service/@Model.Service.ImgDt" alt="Image">
                    </div>
                </div>
                <div class="col-lg-7 align-self-center">
                    <div class="about-us-info-wrap">
                        <div class="section-title-area ltn__section-title-2--- mb-20">
                            <h1 class="section-title">@Model.Service.NameDt</h1>
                        </div>
                        <div class="about-us-info-wrap-inner about-us-info-devide---">
                            <p>@Html.Raw(Model.Service.DescDt)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@if (Model != null && Model.ListServiceDetail != null && Model.ListServiceDetail.Count > 0)
{
    <div class="ltn__service-area section-bg-1 pt-115 pb-70">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title-area ltn__section-title-2--- text-center">
                        <h6 class="section-subtitle section-subtitle-2 ltn__secondary-color">Dịch vụ</h6>
                        <h1 class="section-title">Dịch vụ @(Model.Service != null ? Model.Service.NameDt : "")</h1>
                    </div>
                </div>
            </div>
            <div class="row  justify-content-center">
                @foreach (var item in Model.ListServiceDetail)
                {
                    <div class="col-lg-4 col-sm-6 col-12">
                        <div class="ltn__feature-item ltn__feature-item-6 text-center bg-white  box-shadow-1">
                            <div class="ltn__feature-icon">
                                <img src="/Uploads/Service/@item.ImgSd" style="width:308px; height: 312px;" alt="#">
                            </div>
                            <div class="ltn__feature-info">
                                <h3><a href="javascript:void(0)">@item.NameSd</a></h3>
                                <p>@item.PriceSd.ToString("C", CultureInfo.GetCultureInfo("vi-VN"))</p>
                                <p>@Html.Raw(item.DescDe)</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

